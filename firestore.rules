rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Публичный доступ для чтения клубов
    match /venues/{venueId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // Корты внутри клубов - публичное чтение
      match /courts/{courtId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
    
    // Старая коллекция кортов (для обратной совместимости)
    match /courts/{courtId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Бронирования - создание доступно всем, чтение/обновление только авторизованным
    match /bookings/{bookingId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Остальные коллекции требуют авторизации
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}