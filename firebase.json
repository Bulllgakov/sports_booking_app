{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/webhooks/yookassa",
        "function": "yookassaWebhook",
        "region": "europe-west1"
      },
      {
        "source": "/admin/**",
        "destination": "/admin/index.html"
      },
      {
        "source": "/demo/**",
        "destination": "/demo/index.html"
      },
      {
        "source": "/club/**",
        "destination": "/admin/index.html"
      },
      {
        "source": "/login",
        "destination": "/admin/index.html"
      },
      {
        "source": "/register",
        "destination": "/admin/index.html"
      },
      {
        "source": "/dashboard",
        "destination": "/admin/index.html"
      },
      {
        "source": "/venues",
        "destination": "/admin/index.html"
      },
      {
        "source": "/admins",
        "destination": "/admin/index.html"
      },
      {
        "source": "/courts",
        "destination": "/admin/index.html"
      },
      {
        "source": "/bookings",
        "destination": "/admin/index.html"
      },
      {
        "source": "/customers",
        "destination": "/admin/index.html"
      },
      {
        "source": "/subscription",
        "destination": "/admin/index.html"
      },
      {
        "source": "/payment-settings",
        "destination": "/admin/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "extensions": {
    "firestore-send-email-cgjv": "firebase/firestore-send-email@0.2.4"
  }
}
