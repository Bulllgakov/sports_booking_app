# Коллекция Firestore для писем
EMAIL_COLLECTION=mail

# SMTP настройки для почты хостинга
# Пример для Timeweb (порт 465 - SSL):
SMTP_CONNECTION_URI=smtps://your-email@yourdomain.ru:your-password@smtp.timeweb.ru:465

# Адрес отправителя по умолчанию
DEFAULT_FROM=Название <noreply@yourdomain.ru>

# Reply-to адрес (опционально)
DEFAULT_REPLY_TO=support@yourdomain.ru

# Шаблоны писем (путь в Firestore)
TEMPLATES_COLLECTION=mail_templates

# Настройки для пользователей (опционально)
USERS_COLLECTION=users

# Время жизни обработанных писем в днях (по умолчанию 7)
TTL_EXPIRE_TIME=7

# Включить логирование (для отладки)
# LOG_LEVEL=DEBUG