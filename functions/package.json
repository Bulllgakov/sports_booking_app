{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test:cleanup": "node test-cleanup-web-bookings.js",
    "test:cleanup:check": "node test-cleanup-web-bookings.js check",
    "test:cleanup:run": "node test-cleanup-web-bookings.js test",
    "migrate:dates": "node lib/migrations/unifyAllDateFormats.js",
    "migrate:dates:check": "node ../scripts/run-date-migration.cjs check",
    "migrate:dates:run": "node ../scripts/run-date-migration.cjs run",
    "migrate:dates:status": "node ../scripts/run-date-migration.cjs status"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/tasks": "^6.2.0",
    "axios": "^1.11.0",
    "crypto": "^1.0.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
